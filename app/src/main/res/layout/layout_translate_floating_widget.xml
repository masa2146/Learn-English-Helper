<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/collapsed_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/language"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/error"
                android:layout_marginStart="50dp" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/expanded_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#00C1E7"
            android:orientation="horizontal"
            android:weightSum="6"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/layout_source_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_source"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/edit_source_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_input_text"
                    android:inputType="textMultiLine"/>

            </LinearLayout>

            <ImageView

                android:id="@+id/change_lang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/two_way_arrows"
                tools:ignore="ContentDescription"
                android:layout_weight="1"
                android:layout_gravity="center"/>


            <LinearLayout
                android:id="@+id/layout_dest_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_destination"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/edit_dest_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:hint="@string/output_text"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/minus"
                tools:ignore="ContentDescription"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>